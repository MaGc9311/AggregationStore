.goodsdetail {
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
}

/* 详情页头部导航 */
.goodsdetail .goods-nav {
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  z-index: 999;
  background-color: #fff;
}

.goodsdetail .goods-nav .goods-navicon {
  width: 20%;
  height: 88rpx;
  display: flex;
}

.goodsdetail .goods-nav .goods-navicon view {
  width: 50%;
  text-align: center;
  font-size: 50rpx;
  line-height: 88rpx;
}

.goodsdetail .goods-nav .goods-goods,
.goodsdetail .goods-nav .goods-detail,
.goodsdetail .goods-nav .goods-comment {
  width: 20%;
  text-align: center;
  line-height: 88rpx;
}

.goodsdetail .goods-nav .active {
  border-bottom: 2px solid #f00;
}

.goodsdetail .goods-nav .goods-share {
  width: 20%;
  text-align: center;
  line-height: 88rpx;
}

/* 详情页轮播图 */
.goodsdetail .goods-swiper {
  margin-top: 88rpx;
  width: 100%;
  height: 414px;
}

.goodsdetail .goods-swiper .img {
  width: 100%;
  height: 414px;
}

.goodsdetail .goods-swiper .img image {
  width: 100%;
  height: 414px;
}

/* 价格 */
.goodsdetail .goods-price {
  width: 100%;
  padding: 10rpx;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;

}

.goodsdetail .goods-price .new-price {
  color: #f00;
  font-weight: bold;
  margin-right: 20rpx;
}

.goodsdetail .goods-price .new-price::before {
  content: "￥";
  color: #f00;
  font-size: 28rpx;
  font-weight: lighter;
}

.goodsdetail .goods-price .old-price {
  color: #999;
  font-weight: lighter;
  text-decoration: line-through;
  font-size: 24rpx;
  line-height: 50rpx;
}

.goodsdetail .goods-price .old-price::before {
  content: "￥";
  color: #999;
  font-size: 28rpx;
}

/* 标题 */
.goods-title {
  width: 98%;
  height: 160rpx;
  padding: 10rpx;
}

.goods-title .title {
  width: 100%;
  height: 100rpx;
}

.goods-title .title text {
  word-wrap: break-word;
  font-size: 32rpx;
  color: #333;
}

.goods-title .sales-volume {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  color: #999;
  font-size: 32rpx;
  justify-content: space-between;
}

/* 服务 */
.goods-serve {
  width: 100%;
  height: 60rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}

.goods-serve .serve-title {
  width: 20%;
  height: 100%;
  color: #999;
  line-height: 55rpx;
}

.goods-serve .serve-content {
  width: 80%;
  height: 100%;
  line-height: 55rpx;
}

/* 已选 */
.goods-selected {
  width: 100%;
  height: 60rpx;
  padding: 20rpx;
}

.goods-selected .selected-title {
  width: 20%;
  color: #999;
  font-size: 32rpx;
}

.goods-selected .selected-num {
  width: 75%;
  font-size: 32rpx;
}

.goods-selected .icon-youjiantou1 {
  width: 5%;
  color: #999;
}


/* 底部 */
.footer-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 1px solid #efefef;
}

.footer-container .footer-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  position: relative;

}

.footer-container .footer-item .kf {
  height: 100rpx;
  width: 100%;
  position: absolute;
  z-index: 99;
  opacity: 0;
}

.footer-container .footer-item .buyNun {
  min-width: 30rpx;
  padding: 5rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f44;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}

.footer-container .footer-item .iconfont {
  font-size: 40rpx;
}

.footer-container .footer-item.addcart {
  flex: 2;
  font-size: 28rpx;
  background: #f44;
  color: #fff;
}

.footer-container .footer-item.buy {
  flex: 2;
  font-size: 28rpx;
  background: #ff976a;
  color: #fff;
}

/* 蒙板 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
}

.content {
  width: 100%;
  height: 440rpx;
  background-color: #fff;
  position: fixed;
  top: 64%;
}

.content .top {
  width: 100%;
  height: 220rpx;
  padding: 20rpx;
}

.content .top .maskGoodsImg {
  width: 220rpx;
  height: 220rpx;
  position: absolute;
  top: -20rpx;
  border-radius: 10rpx;
  box-shadow: 8rpx 8rpx 8rpx #333;

}

.content .top .maskGoodsImg .img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}

.content .top .top-right {
  width: 470rpx;
  height: 240rpx;
  position: absolute;
  right: 20rpx;
}

.content .top .top-right .maskGoodsTitle {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 auto 20rpx;
  line-height: 40rpx;
}

.content .top .top-right .maskGoodsPrice {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #f44;
}

.content .top .top-right .maskGoodsInventory {
  width: 100%;
  height: 80rpx;
  color: #999;
  font-size: 28rpx;
}

.content .mid {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .mid .changeNum {
  width: 300rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-right: 50rpx;
  border: 2rpx solid #ccc;
}

.content .mid .changeNum button,
.content .mid .changeNum input {
  width: 33%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
}

.content .mid .changeNum button {
  outline: none;
  border: none;
  background-color: #F8F8F8;
  text-indent: -2rpx;
}

.content .mid .changeNum input {
  width: 56px;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

.content .down {
  width: 100%;
  height: 88rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  line-height: 88rpx;
}

.content .down .maskAddCart,
.content .down .buyNow {
  width: 50%;
  height: 88rpx;
  text-align: center;
  color: #fff;
}

.content .down .maskAddCart {
  background-color: #fba534;
}

.content .down .buyNow {
  background-color: #f55;
}