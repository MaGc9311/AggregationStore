/* pages/goodslist/goodslist.wxss */
.goodslist-search {
  width: 100%;
  height: 88rpx;
  position: fixed;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.goodslist-search .search-in {
  width: 88%;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1px solid #ccc;
  position: relative;
  display: flex;
}

.goodslist-search .search-in text {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.goodslist-search .search-in .icon-cx {
  position: absolute;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.goodslist-search .search-out {
  width: 8%;
}

.goodslist-search .icon-fenlei {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}

.screen {
  width: 100%;
  height: 88rpx;
  position: fixed;
  top: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.screen .screen-item {
  width: 20%;
  text-align: center;
  font-size: 28rpx;
}

.goodslist-content {
  width: 100%;
  position: fixed;
  top: 176rpx;
  bottom: 0;
  background-color: #efefef;
  padding-top: 20rpx;
}

.goodslist-content .goodslist-content-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}


.goodslist-content .content-itme {
  width: 337rpx;
  height: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.goodslist-content .content-itme .item-img {
  width: 100%;
  height: 337rpx;
  margin: 0 auto 20rpx;
}

.goodslist-content .content-itme .item-img image {
  width: 100%;
  height: 337rpx;
  border-radius: 20rpx 20rpx 0 0;
  margin: 0 auto 20rpx;
}

.goodslist-content .content-itme .goods-name {
  width: 90%;
  height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 auto 20rpx;
}

.goodslist-content .content-itme .goods-price {
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  color: red;
  margin: 0 auto 20rpx;
  font-weight: bold;
}

.goodslist-content .content-itme .goods-price::before {
  content: " ï¿¥";
  font-size: 28rpx;
  font-weight: lighter;
}

.goodslist-content .content-itme .enter-store {
  display: flex;
  width: 90%;
  height: 50rpx;
  margin: 0 auto 20rpx;
  line-height: 50rpx;
}

.goodslist-content .content-itme .enter-store .enter {
  background: #FEF0F0;
  color: #F92028;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.goodslist-content .content-itme .enter-store .hasbuy {
  width: 230rpx;
  font-size: 28rpx;
  color: #999;
  text-indent: 10rpx;

}

.goodslist-content .content-itme .enter-store .icon-31gouwuche {
  width: 50rpx;
  height: 50rpx;
  font-size: 40rpx;
  color: #F92028;
}